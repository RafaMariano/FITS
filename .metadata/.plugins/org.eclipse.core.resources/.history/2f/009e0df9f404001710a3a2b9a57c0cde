package br.inpe.filesystem;

import java.io.IOException;
import java.text.ParseException;

import org.springframework.data.annotation.Id;
import org.springframework.data.mongodb.core.mapping.Document;

import nom.tam.fits.Fits;
import nom.tam.fits.FitsException;

@Document(collection = "images")
public class ImagesFits {
	@Id
	private String id;
	private org.bson.Document document;
	private Fits fits;
	private String path;
	private ConvertTime convertTime;
	
	public ImagesFits(String fits) throws FitsException, IOException, ParseException{
		this.fits = new Fits(fits);
		this.document = new org.bson.Document();
		this.path = fits;
		this.convertTime = new ConvertTime();
//		setDocument();
	}
	
	public String getId(){
		return id;
	}
	public void setId(String id){
		this.id = id;
	}
	public org.bson.Document getDocument(){
		return document;
	}
	public void setDocument(org.bson.Document document){
		this.document = document;
	}
}
