package inpe.api;

import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.InputStream;
import java.io.OutputStream;
import java.net.URL;
import java.net.HttpURLConnection;

public class Main {

	public static void main(String[] args) {
		
				URL urlObj = new URL(//img que vc quer baixar.);   
				
				org.apache.commons.httpclient.util.HttpURLConnection a = (org.apache.commons.httpclient.util.HttpURLConnection) urlObj.openConnection();
				//HttpURLConnection httpConnection = (HttpURLConnection)urlObj.openConnection();
				httpConnection.setRequestMethod("GET");
				InputStream inputStream = httpConnection.getInputStream();
				OutputStream outputStream = null;
				try {
				    int read = 0;
				    byte[] bytes = new byte[1024];
				    outputStream = new FileOutputStream(new File(pathToSave));
				    while ((read = inputStream.read(bytes)) != -1) {
				        outputStream.write(bytes, 0, read);
				    }
				} catch (FileNotFoundException ex) {
				    ex.getMessage();
				} catch (IOException ex) {
				    ex.getMessage();
				} finally {
				    try {
				        if (outputStream != null) {
				            outputStream.close();
				        }
				    } catch (IOException ex) {
				        ex.getMessage();
				    }
				}

	}

}
