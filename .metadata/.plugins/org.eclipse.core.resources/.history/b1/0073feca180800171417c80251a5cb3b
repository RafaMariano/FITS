		Pattern HORAS = Pattern
		        .compile(".*(PATH_ORIGINAL).*");
		
		Path caminho = Paths.get("/home/inpe/a.txt");
		Stream<String> linhas = Files.lines(caminho);
		
		Stream<Map<String,String>> horasSemanais = linhas.map(linha -> {
			
			Map<String,String> a = new HashMap<>();
			if (linha.contains("="))
				a.put(linha.substring(0, linha.indexOf("=")-1), linha.substring(linha.indexOf("=")));
			else
				a.put(linha, "");
		
	      
	        return a;
	});
		
		
		
	
		for(Object a: horasSemanais.toArray()){
			Map<String,String> v = (Map<String, String>) a;
			System.out.println(v.get("PATH_ORIGINAL"));
			//System.out.println(1);
		}
		
	}

