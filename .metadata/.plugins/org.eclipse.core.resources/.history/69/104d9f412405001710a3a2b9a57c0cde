package br.inpe.database;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.data.mongodb.core.MongoTemplate;
import org.springframework.stereotype.Repository;

import br.inpe.filesystem.ImagesCollection;
import br.inpe.repository.ImageRepository;

@Repository("imageRepository")
public class ImageDAO implements ImageRepository {
	
	private MongoTemplate mongoTemplate;
	
	@Autowired
	public ImageDAO(final MongoTemplate mongoTemplate){
		this.mongoTemplate = mongoTemplate;
	}

	public void save(ImagesCollection image) {
		this.mongoTemplate.insert(image);
	}
}
