	 private String loginIsTrue(String user, String password) throws IOException, JSONException {

	        String url = "http://10.0.2.2:8080/springRestSecurity/login";
	        URL obj = new URL(url);
	        java.net.HttpURLConnection con =  (java.net.HttpURLConnection) obj.openConnection();
	        con.setRequestMethod("POST");
	        con.setRequestProperty("Content-Type", "application/json");

	        JSONObject cred = new JSONObject();
	        cred.put("username", user);
	        cred.put("password", password);

	        // Send post request
	        con.setDoOutput(true);
	        DataOutputStream wr = new DataOutputStream(con.getOutputStream());
	        wr.writeBytes(cred.toString());
	        wr.flush();
	        wr.close();

	        int code = con.getResponseCode();

	        if (code == 200) {

	            String token = con.getHeaderField("Token");


	            //System.out.println(con.getContent().);
	            BufferedReader in = new BufferedReader(
	                    new InputStreamReader(con.getInputStream()));
	            String inputLine;
	            StringBuffer response = new StringBuffer();

	            while ((inputLine = in.readLine()) != null) {
	                response.append(inputLine);
	            }
	            in.close();

	            return token;
	        }
	        else {
	            return null;
	        }
}
