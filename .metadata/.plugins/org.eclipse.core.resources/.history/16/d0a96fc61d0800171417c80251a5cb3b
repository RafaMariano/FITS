package br.inpe.log;

import java.io.IOException;
import java.nio.file.Files;
import java.nio.file.Paths;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

public class Log {
	
	private String path;
	
	public Log(String path){
		this.path = path;
	}
	
	public void setLog(String pathOriginal, String pathDestination){
		
		List<String> lines;
		
		try {
			
			lines = Files.readAllLines(Paths.get("/home/inpe/a.txt"));
			lines.add(FileSystemResult.PATH_ORIGINAL.toString() + " = " + pathOriginal);
			lines.add(FileSystemResult.PATH_DESTINATION.toString() + " = " + pathDestination);
			Files.write(Paths.get("/home/inpe/a.txt"), lines);
				
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		
